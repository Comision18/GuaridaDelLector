<%- include('./partials/head')  %>
<body>
    <%- include('./partials/header')  %>
    <span class="envios-gratis-span">ENVIOS GRATIS EN PRODUCTOS MAYORES A $5000</span>
    <main class="
    categoria">

    <!-- NOVELAS -->
    <section class="index__main__section">

        <div class="index__main--titulares">
            <h2 id="allNovels">Novelas</h2>
            <hr>
        </div> 
        <!-- ARREGLAR GENERO PARA QUE SEA IGUAL A LO QUE MANDO POR FORMULARIO -->
        <% libros.forEach(libro => { %> 
                <% if(libro.genero === "Novela" ||  libro.genero === "Novela Ficción" || libro.genero === "Novela Terror" || libro.genero === "Novela Fantasia" || libro.genero === "Novela Negra") { %>
                    <div class="contenedor">
                    <div class="card--populares">
                        <figure>
                        <img src="/images/<%=libro.imagen ? libro.imagen : 'not image.png'%>" alt="">
                        </figure>
                    <div class="contenido">
                        <h3>$<%=libro.precio%></h3>
                        <a href="/products/detail/<%=libro.id%>">Leer más</a>
                    </div>
                </div>
            </div>   
            <% } %>  
            <% }) %>        
    </section>

        <!-- INFANTILES -->
        <section class="index__main__section">

            <div class="index__main--titulares">
                <h2 id="infantil">Infantiles</h2>
                <hr>
            </div> 
            
            <% libros.forEach(libro => { %>
                    <% if(libro.genero === "Infantil" ) { %>
                        <div class="contenedor">
                        <div class="card--populares">
                            <figure>
                            <img src="/images/<%=libro.imagen ? libro.imagen : 'not image.png'%>" alt="">
                            </figure>
                        <div class="contenido">
                            <h3>$<%=libro.precio%></h3>
                            <a href="/products/detail/<%=libro.id%>">Leer más</a>
                        </div>
                    </div>
                </div>   
                <% } %>  
                <% }) %>        
        </section>



        <!-- DIVULGACION -->
        <section class="index__main__section">

            <div class="index__main--titulares">
                <h2 id="ciencia">Divulgación Científica</h2>
                <hr>
            </div> 
            
            <% libros.forEach(libro => { %>
                    <% if(libro.genero === "Divulgacion Cientifica" ) { %>
                        <div class="contenedor">
                        <div class="card--populares">
                            <figure>
                            <img src="/images/<%=libro.imagen ? libro.imagen : 'not image.png'%>" alt="">
                            </figure>
                        <div class="contenido">
                            <h3>$<%=libro.precio%></h3>
                            <a href="/products/detail/<%=libro.id%>">Leer más</a>
                        </div>
                    </div>
                </div>   
                <% } %>  
                <% }) %>        
        </section>
        

        <!-- COMICS y MANGAS -->
        <section class="index__main__section">

            <div class="index__main--titulares">
                <h2 id="comics">Comics y Mangas</h2>
                <hr>
            </div> 
            
            <% libros.forEach(libro => { %>
                    <% if(libro.genero === "Comics" || libro.genero === "Manga" ) { %>
                        <div class="contenedor">
                        <div class="card--populares">
                            <figure>
                            <img src="/images/<%=libro.imagen ? libro.imagen : 'not image.png'%>" alt="">
                            </figure>
                        <div class="contenido">
                            <h3>$<%=libro.precio%></h3>
                            <a href="/products/detail/<%=libro.id%>">Leer más</a>
                        </div>
                    </div>
                </div>   
                <% } %>  
                <% }) %>        
        </section>
        
       
        
